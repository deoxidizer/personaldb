<Window x:Class="Flug_INSY_Projekt_1.Semester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PersonalDB GUI" Height="350" Width="525">
    <Grid Height="341">
        <Menu Height="27" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top" Width="522" Margin="0,0,-5,0">
            <MenuItem Header="Datei">
                <MenuItem Header="Connect" Click="MenuConnect_Click" />
                <MenuItem Header="Disconnect" Click="MenuDisconnect_Click" />
                <Separator></Separator>
                <MenuItem x:Name="MenuExit" Header="Exit" Click="MenuExit_Click" />
            </MenuItem>
            <MenuItem Header="Bearbeiten">
                <MenuItem Header="Insert"   Name="Menu_Insert" IsEnabled="False" Click="Menu_Insert_Click"/>
                <MenuItem Header="Delete"   Name="Menu_Delete" IsEnabled="False" Click="Menu_Delete_Click"/>
            </MenuItem>
            <MenuItem Header="About" Name="Menu_About" IsEnabled="True" Click="Menu_About_Click"></MenuItem>
        </Menu>
        <DataGrid x:Name="detailgrid" IsReadOnly="True" MouseDoubleClick="detailgrid_MouseDoubleClick" SelectionChanged="detailgrid_SelectionChanged" Margin="0,27">

        </DataGrid>
    </Grid>
</Window>
